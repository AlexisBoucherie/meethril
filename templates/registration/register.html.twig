{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center  mt-3">Register</h1>

    <div class="container d-flex justify-content-center mt-3">
        <div class="row w-75">
            {{ form_start(registrationForm) }}
            <div class="col-12 col-md-10 col-lg-8 bg-light mx-auto custom-shadow rounded pb-2">
                <div class="m-3 d-flex justify-content-center">
                    <img src="{{ asset('assets/img/Meethril logo.png') }}" alt="Logo Meethril" width="250" height="100">
                </div>
                <div class="m-3">
                    {{ form_label(registrationForm.email, 'Adresse email') }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="m-3">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="m-3 form-check">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                </div>
                <div class="m-3 d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger mt-3 w-100">S'enregistrer</button>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}

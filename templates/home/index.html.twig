{% extends 'base.html.twig' %}

{% block title %}Toutes les parties{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1 class="text-center m-3">Toutes les parties</h1>
        <div class="row">
            {% for session in sessions %}
                <div class="card col-12 col-md-6 col-lg-4 mb-2 mb-md-0 custom-shadow">
                    <div class="card-body pb-0">
                        <h5 class="card-title text-center">{{ session.name }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-evenly">
                            <img src="{{ session.image }}"
                                 alt="Image de la partie"
                                 style="width:6rem;height: 6rem">
                            <ul>
                                <li>
                                    <i class="bi bi-geo-alt-fill"></i>
                                    Lieu : {{ session.place }}</li>
                                <li>
                                    <i class="bi bi-calendar-check-fill"></i>
                                    Date : {{ session.date|date('Y-m-d H:i') }}</li>
                                <li>
                                    <i class="bi bi-hourglass-split"></i>
                                    Type : {{ session.type }}</li>
                                <li>
                                    <i class="bi bi-people-fill"></i>
                                    Joueurs : <span>{{ session.currentPlayerNb }} / {{ session.maxPlayerNb }}</span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body d-flex justify-content-center pt-0">
                        <a href="{{ path('app_session_show', {'id': session.id}) }}" 
                           class="btn btn-danger">Voir tous les détails</a>
                    </div>
                </div>
            {% else %}
                <p>Désolé... Il n'y a aucune partie d'ouverte actuellement !</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}